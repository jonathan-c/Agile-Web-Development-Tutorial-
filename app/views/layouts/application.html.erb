<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	
	<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
	<%= render @cart %>
	<% end %>
	
<div id="banner">
	<%= image_tag("logo.png") %>
	<%= @page_title || "Pragmatic Bookshelf" %>
</div>
<div id="columns">
	<div id="side">
		<div id="cart">
			<%= render(@cart) %>
		</div>
		
		<ul>
			<li id="time"><%= Time.now.strftime("The time is currently %I:%M%p") %></li>
			<li><a href='store_path'>Home</a></li>
			<li><a href="http://www.">FAQ</a></li>
			<li><a href="http://www.">News</a></li>
			<li><a href="http://www.">Contact</a></li>
		<ul>
		</div>
		<div id="main">
		<%= yield %>
		</div>
	</div>
</body>
</html>
